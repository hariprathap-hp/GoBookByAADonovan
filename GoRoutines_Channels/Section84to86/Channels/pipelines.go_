package main

import "fmt"

//create two channels
var ch1 = make(chan int)
var ch2 = make(chan int)

func main() {

	go counter()
	go square()
	print()
}

func counter() {
	for i := 0; i < 10; i++ {
		ch1 <- i
	}
	close(ch1)
}

func square() {
	for x := range ch1 {
		ch2 <- x * x

	}
	close(ch2)
}

func print() {
	for j := range ch2 {
		fmt.Println(j)
	}
}
